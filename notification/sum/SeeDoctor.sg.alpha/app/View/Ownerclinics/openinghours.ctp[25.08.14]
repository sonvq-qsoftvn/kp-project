<script type='text/javascript'>
    function setslots(k)
   {    
       var i=document.getElementById('number_of_'+k+'_slots').value;
       
       //var i=1;
        
       if (i=='' || i=='0')
        {
            i=1;
        }
        
            txt="<table border=0 cellspacing='5' cellpadding=12>";
            for(c=1;c<=i;c++)
        {
            txt+="<tr><th colspan=2 style='text-align: left;font-size: large;'>Slot "+c+"</th></tr><tr><td>From :</td><td><select name='from_hours_"+k+"_"+c+"' >";
            for(ai=0;ai<=23;ai++)
            {
                txt+="<option>"+ai+"</option>";
            }
            txt+="</select><select name='from_minutes_"+k+"_"+c+"' >";
            for(bi=0;bi<=59;bi++)
            {
                txt+="<option>"+bi+"</option>";
            }
            txt+="</select></td></tr>";
            
            txt+="<tr><td>To :</td><td><select name='to_hours_"+k+"_"+c+"' >";
            for(ai=0;ai<=23;ai++)
            {
                txt+="<option>"+ai+"</option>";
            }
            txt+="</select><select name='to_minutes_"+k+"_"+c+"' >";
            for(bi=0;bi<=59;bi++)
            {
                txt+="<option>"+bi+"</option>";
            }
            txt+="</select></td></tr>";
           
        }
        txt+="</table>";
        
        document.getElementById('day_'+k+'_slots').innerHTML=txt;
        i++;
        
        document.getElementById('number_of_'+k+'_slots').value=i;
        
        
    }
</script>