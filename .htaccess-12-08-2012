#RewriteRule ^dashboard/ dashboard.php
#RewriteRule ^event1/(.*)/step/(.*) event1.php?event_id=$1&step=$2


RewriteRule ^event/(.*)/lang/(.*) event.php?event_id=$1&lang=$2
